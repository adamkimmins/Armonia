<Window x:Class="Armonia.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Armonia"
        WindowStartupLocation="CenterScreen"
        Background="white"
        Width="600" Height="600"
        Loaded="MainWindow_Loaded">
    <Grid>

        <!-- Splash overlay -->
        <Grid x:Name="SplashOverlay">
            <Image Source="Assets/Armonia.png"
                   Stretch="UniformToFill"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"/>
        </Grid>
        <!-- Welcome + future Tutorial -->
        <Grid x:Name="StarterContent" Opacity="0" Background="White">
            <Grid.RenderTransform>
                <TranslateTransform Y="0"/>
            </Grid.RenderTransform>
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="ðŸŽµ Welcome to Armonia"
                           FontSize="26"
                           FontWeight="Bold"
                           Foreground="Black"
                           HorizontalAlignment="Center"/>
            </StackPanel>
        </Grid>
        <!-- Main content -->
        <Grid x:Name="MainContent" Opacity="0" Background="White">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="Main Menu"
                           FontSize="26"
                           FontWeight="Bold"
                           Foreground="Black"
                           HorizontalAlignment="Center"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>