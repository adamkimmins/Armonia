<UserControl x:Class="Armonia.App.Controls.TimelineControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="60" Background="#e7d5c0">

    <UserControl.Resources>
        <Style x:Key="GoldText" TargetType="TextBlock">
            <Setter Property="Foreground">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                            <!-- center -->
                            <GradientStop Color="#d0aa58" Offset="0.0"/>
                            <GradientStop Color="#ecd08f" Offset="0.3"/>
                            <GradientStop Color="#c7a95c" Offset="0.6"/>
                            <!-- outer -->
                            <GradientStop Color="#815a00" Offset="1.0"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid>
        <!-- Time readout -->
        <Border Background="#000000"

                Padding="26,3"
                Margin="0,0,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top">
            <TextBlock x:Name="TimeText"
                
                       Text="0:00.00"
                       FontWeight="Bold"
                       FontSize="14"
                       Style="{StaticResource GoldText}"
                       TextAlignment="Center"/>
        </Border>

        <!-- Beat/timeline layer -->
        <Canvas x:Name="Layer" Margin="100,0,0,0"
                VerticalAlignment="Stretch"
                Background="Transparent">
            <Rectangle x:Name="SeekThumb"
                       Width="2" Height="60"
                       Fill="#6b563f"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Stretch"/>
        </Canvas>
    </Grid>
</UserControl>

