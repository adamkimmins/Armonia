<UserControl x:Class="Armonia.App.Controls.TrackAddRow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="60" Background="#dec4a1">

  <UserControl.Resources>
    <!-- Base icon style -->
    <Style x:Key="IconButtonStyle" TargetType="Button">
        <Setter Property="Foreground" Value="#412013"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="FontFamily" Value="Segoe UI Emoji"/>
        <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
        <Setter Property="OverridesDefaultStyle" Value="True"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}">
                        <ContentPresenter HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        TextElement.Foreground="{TemplateBinding Foreground}"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>

        <Setter Property="Background">
              <Setter.Value>
                <SolidColorBrush Color="Transparent"/>
              </Setter.Value>
            </Setter>

        <Style.Triggers>
          <Trigger Property="IsMouseOver" Value="True">
            <Setter Property="Foreground">
              <Setter.Value>
                <SolidColorBrush Color="#000000"/>
              </Setter.Value>
            </Setter>
            <Setter Property="Background">
              <Setter.Value>
                <LinearGradientBrush StartPoint="1,0" EndPoint="0,0">
                            <!-- center -->
                            <GradientStop Color="#d0aa58" Offset="0.0"/>
                            <GradientStop Color="#ecd08f" Offset="0.3"/>
                            <GradientStop Color="#c7a95c" Offset="0.6"/>
                            <!-- outer -->
                            <GradientStop Color="#815a00" Offset="1.0"/>
                  </LinearGradientBrush>
              </Setter.Value>
            </Setter>
          </Trigger>
        </Style.Triggers>  
    </Style>
  </UserControl.Resources>

  <Grid>
    <!-- <Grid.ColumnDefinitions>
      <ColumnDefinition Width="100"/>
      <ColumnDefinition Width="*"/>
    </Grid.ColumnDefinitions> -->

      <Button Grid.Column="0" Content="+" Background="#c4a983" FontSize="28" FontWeight="Bold"
                 HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                 Style="{StaticResource IconButtonStyle}"
                 Click="OnAddTrackClick"/>

    <!-- <Button Grid.Column="1"
            BorderThickness="1"
            Style="{StaticResource IconButtonStyle}"
            Content="Add New Track"
            FontWeight="Bold"
            HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
            Click="OnAddTrackClick"/> -->
    
    <!-- bottom separator -->
    <Rectangle Height="1" Fill="#6b563f" VerticalAlignment="Bottom" Grid.ColumnSpan="2"/>
  </Grid>
</UserControl>
