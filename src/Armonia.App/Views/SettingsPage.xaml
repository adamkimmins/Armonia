<UserControl x:Class="Armonia.App.Views.SettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="#cfb29a">

    <UserControl.Resources>
        <!-- Icon style -->
        <Style x:Key="IconButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="30"/>
            <Setter Property="Foreground" Value="#2c1a0c"/>
            <Setter Property="FontFamily" Value="Segoe UI Emoji"/>
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
            <Setter Property="OverridesDefaultStyle" Value="True"/>
            <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
            <Setter Property="RenderTransform">
                <Setter.Value>
                    <TranslateTransform Y="0"/>
                </Setter.Value>
            </Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              TextElement.Foreground="{TemplateBinding Foreground}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="1.15" ScaleY="1.15"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Foreground" Value="#5A3E2B"/>
                                <Setter Property="RenderTransform">
                                    <Setter.Value>
                                        <TranslateTransform Y="3"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid Margin="10, 0, 10, 0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Text="âš™ï¸ Settings"
                   FontSize="36"
                   FontFamily="Georgia"
                   FontWeight="Bold"
                   Foreground="#3B2415"
                   HorizontalAlignment="Center"
                   Margin="0,30,0,30"/>
                   
        <Button Content="â¬…"
                Style="{StaticResource IconButtonStyle}"
                Width="80" Height="80"
                Click="Back_Click"
                Margin="-25,-15,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"/>

        <!-- ðŸ”§ Main Settings Container -->
        <Border Grid.Row="1"
                Background="#e3d1bb"
                CornerRadius="12"
                Padding="30"
                Width="400"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                BorderBrush="#bca48b"
                BorderThickness="1">
            
            <StackPanel Orientation="Vertical">

                <!-- Volume Slider -->
                <StackPanel Margin="0,10">
                    <TextBlock Text="Master Volume"
                               FontSize="18"
                               FontFamily="Georgia"
                               FontWeight="SemiBold"
                               Foreground="#3B2415"/>
                    <Slider x:Name="VolumeSlider"
                            Minimum="0"
                            Maximum="100"
                            TickFrequency="10"
                            IsSnapToTickEnabled="True"
                            Foreground="#3B2415"
                            Margin="0,5,0,0"/>
                </StackPanel>

                <!-- Theme Dropdown -->
                <StackPanel Margin="0,20">
                    <TextBlock Text="Theme"
                               FontSize="18"
                               FontFamily="Georgia"
                               FontWeight="SemiBold"
                               Foreground="#3B2415"/>
                    <ComboBox x:Name="ThemeSelector"
                              Margin="0,5,0,0"
                              Foreground="#3B2415"
                              FontFamily="Georgia"
                              Background="#f7e7d4">
                        <ComboBoxItem Content="Light" />
                        <ComboBoxItem Content="Dark" />
                        <ComboBoxItem Content="Rustic (Default)" />
                    </ComboBox>
                </StackPanel>

                <!-- Startup Screens Toggle -->
                <StackPanel Margin="0,20">
                    <TextBlock Text="Startup Screens"
                            FontSize="18"
                            FontFamily="Georgia"
                            FontWeight="SemiBold"
                            Foreground="#3B2415"/>
                    <CheckBox x:Name="ShowStartupCheckBox"
                            Content="Show splash + startup screens"
                            FontFamily="Georgia"
                            Foreground="#3B2415"
                            IsChecked="True"
                            Margin="0,5,0,0"/>
                </StackPanel>

                <!-- Save Button -->
                <Button Content="Save Settings"
                        Click="SaveButton_Click"
                        FontSize="16"
                        FontFamily="Georgia"
                        FontWeight="Bold"
                        Foreground="White"
                        Background="#5A3E2B"
                        BorderThickness="0"
                        Padding="10,5"
                        Cursor="Hand"
                        Margin="0,25,0,0"
                        HorizontalAlignment="Center"
                        Width="160"
                        BorderBrush="#3B2415">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#5A3E2B"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="Cursor" Value="Hand"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                CornerRadius="5"
                                                Padding="10,5">
                                            <ContentPresenter HorizontalAlignment="Center"
                                                              VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#7b4c27"/>
                                            </Trigger>
                                            <Trigger Property="IsPressed" Value="True">
                                                <Setter Property="Background" Value="#3b2415"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>

            </StackPanel>
        </Border>
    </Grid>
</UserControl>
