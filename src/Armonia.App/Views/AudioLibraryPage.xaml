<UserControl x:Class="Armonia.App.Views.AudioLibraryPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="#81614d">

    <UserControl.Resources>
        <!-- Icon style -->
        <Style x:Key="IconButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="30"/>
            <Setter Property="Foreground" Value="#2c1a0c"/>
            <Setter Property="FontFamily" Value="Segoe UI Emoji"/>
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
            <Setter Property="OverridesDefaultStyle" Value="True"/>
            <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
            <Setter Property="RenderTransform">
                <Setter.Value>
                    <TranslateTransform Y="0"/>
                </Setter.Value>
            </Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              TextElement.Foreground="{TemplateBinding Foreground}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="1.15" ScaleY="1.15"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Foreground" Value="#5A3E2B"/>
                                <Setter Property="RenderTransform">
                                    <Setter.Value>
                                        <TranslateTransform Y="3"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>


    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="2*" />  <!-- Top: Project list -->
            <RowDefinition Height="*" />   <!-- Bottom: Audio + Lyrics -->
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" /> <!-- Left: Audio -->
            <ColumnDefinition Width="*" /> <!-- Right: Lyrics -->
        </Grid.ColumnDefinitions>

        <!-- â‡¦ Back button -->
        <Button Content="â¬…"
                Style="{StaticResource IconButtonStyle}"
                Width="70" Height="70"
                Click="Back_Click"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Margin="-15,-20,0,0"
                Cursor="Hand"/>

        <!-- ðŸ—‚ï¸ Project Library -->
        <Border Grid.Row="0" Grid.ColumnSpan="2"
                Margin="0,40,0,10"
                Background="#cfb29a"
                CornerRadius="6">
            <ListBox x:Name="ProjectList"
                     Background="#f6eadc"
                     BorderThickness="0"
                     FontFamily="Georgia"
                     Foreground="#36261a"
                     SelectionMode="Single"
                     Height="200"
                     Margin="10,0,10,10"
                     MouseDoubleClick="ProjectList_DoubleClick">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Border Background="#f6eadc" CornerRadius="4" Padding="10" Margin="5">
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <TextBlock Text="{Binding ProjectName}" 
                                           FontFamily="Georgia"
                                           FontSize="18"
                                           Foreground="#36261a"
                                           Width="200"/>
                                <TextBlock Text="{Binding CreatedDate}"
                                           Foreground="#5a3e2b"
                                           Margin="10,0,20,0"/>
                                <Button Content="Load"
                                        Click="LoadProject_Click"
                                        Tag="{Binding ProjectName}"
                                        FontFamily="Georgia"
                                        FontWeight="SemiBold"
                                        FontSize="14"
                                        Foreground="White"
                                        Background="#5a3e2b"
                                        Padding="8,2"
                                        BorderThickness="0"
                                        Cursor="Hand"/>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Border>


        <!-- ðŸ”‰ Audio Files -->
        <Border Grid.Row="1" Grid.Column="0"
                Background="#a98b73"
                CornerRadius="6"
                Margin="0,10,5,0">
            <StackPanel Margin="10">
                <TextBlock Text="ðŸŽ§ Audio Files"
                           FontFamily="Georgia"
                           FontSize="20"
                           FontWeight="Bold"
                           Foreground="#2c1a0c"
                           Margin="0,0,0,10"/>
                <ListBox x:Name="AudioFileList"
                         Background="#f6eadc"
                         BorderThickness="0"
                         FontFamily="Georgia"
                         Foreground="#36261a"
                         Height="180"/>
            </StackPanel>
        </Border>


        <!-- âœï¸ Lyrics Files -->
        <Border Grid.Row="1" Grid.Column="1"
                Background="#a98b73"
                CornerRadius="6"
                Margin="5,10,0,0">
            <StackPanel Margin="10">
                <TextBlock Text="ðŸ“ Lyrics Files"
                           FontFamily="Georgia"
                           FontSize="20"
                           FontWeight="Bold"
                           Foreground="#2c1a0c"
                           Margin="0,0,0,10"/>
                <ListBox x:Name="LyricsFileList"
                         Background="#f6eadc"
                         BorderThickness="0"
                         FontFamily="Georgia"
                         Foreground="#36261a"
                         Height="180"
                         MouseDoubleClick="LyricsFileList_DoubleClick"/>
            </StackPanel>
        </Border>

    </Grid>
</UserControl>
