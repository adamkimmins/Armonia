<UserControl x:Class="Armonia.App.Views.ComposerControl"
             x:Name="ComposerSection"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:controls="clr-namespace:Armonia.App.Controls"
             xmlns:vm="clr-namespace:Armonia.App.ViewModels"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d">
    
    <UserControl.Resources>
        <Style x:Key="MetalButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Foreground" Value="#f2e5c2"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <!-- no system background, only your glyphs will show -->
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                            <!-- optional faint shine overlay on hover -->
                            <Rectangle x:Name="HoverShine"
                                    RadiusX="6"
                                    RadiusY="6"
                                    Opacity="0"
                                    Fill="{DynamicResource HoverShineBrush}"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="HoverShine" Property="Opacity" Value="0.35"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="HoverShine" Property="Opacity" Value="0.55"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- subtle golden reflection for hover TODO-->
        <LinearGradientBrush x:Key="HoverShineBrush" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#00FFFF" Offset="0.0"/>
            <GradientStop Color="#33FFF3" Offset="0.35"/>
            <GradientStop Color="#22FFFF" Offset="1.0"/>
        </LinearGradientBrush>

        <!-- Drop shadow -->

        <!-- Wheel -->
        <RadialGradientBrush x:Key="WheelInnerGradient" GradientOrigin="0.5,0.5" Center="0.5,0.45" RadiusX="0.8" RadiusY="1">
            <GradientStop Color="#000000" Offset="0"/>
            <GradientStop Color="#000000" Offset="0.2"/>
            <GradientStop Color="#6a6a6a" Offset="0.7"/>
            <GradientStop Color="#a1a1a1" Offset="0.9"/>
            <GradientStop Color="#acacac" Offset="1"/>
        </RadialGradientBrush>

        <RadialGradientBrush x:Key="GroovesGradient" GradientOrigin="0.5,2" Center="0.5,2" RadiusX="1" RadiusY="4">
            <GradientStop Color="#3b3b3b" Offset="0"/>
            <GradientStop Color="#676767" Offset="0.45"/>
            <GradientStop Color="#acacac" Offset="0.80"/>
        </RadialGradientBrush>
    </UserControl.Resources>

    <Grid ClipToBounds="True">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="25"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Transport Bar -->
        <StackPanel Orientation="Horizontal" Background="#e7d5c0" Height="55" x:Name="TaskbarPanel">
            <!-- TESTING TODO -->
            <StackPanel.RenderTransform>
                <TranslateTransform x:Name="ComposerTranslateTransform" X="0"/>
            </StackPanel.RenderTransform>

            <!-- Play -->
            <Button x:Name="PlayButton" 
                    Style="{StaticResource MetalButtonStyle}"
                    Width="40" Height="40" 
                    Click="OnPlayClick"
                    Background="Transparent" 
                    BorderThickness="0" 
                    Margin="12,-2,4,0">

                <Grid>
                    <Polygon 
                            Points="0,0 20,10 0,20"
                            Name="PlayGlyph"/>
                </Grid>
            
            </Button>
            <!-- Stop -->
            <Button x:Name="StopButton" 
                    Style="{StaticResource MetalButtonStyle}"
                    Width="40" Height="40"
                    Click="OnStopClick" 
                    Background="Transparent" 
                    BorderThickness="0" 
                    Margin="0,-2,0,0">
                <Rectangle Width="20" Height="20"
                           RadiusX="4" RadiusY="4"
                           Name="StopGlyph"/>
            </Button>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- BPM label -->
                <TextBlock Text="BPM: 180"
                        Grid.Row="0"
                        VerticalAlignment="Center"
                        Margin="25,7,6,0"
                        FontWeight="SemiBold"
                        Foreground="#5b4636"/>
                <!-- BPM WHEEL 1 -->
                <Grid x:Name="BpmWheelContainer"
                    Grid.Row="1"
                    Width="60"
                    Height="18"
                    VerticalAlignment="Center"
                    Margin="20,4,0,0">
                <!-- Outer frame 2 -->
                <Border CornerRadius="20"
                        Background="#212121"
                        BorderBrush="#292929"
                        BorderThickness="1.5">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="8"
                                        ShadowDepth="2"
                                        Direction="270"
                                        Opacity="0.45"
                                        Color="Black"/>
                    </Border.Effect>
                </Border>
                <!-- Inner surface 3 -->
                <Border CornerRadius="18"
                        Margin="2"
                        Background="{StaticResource WheelInnerGradient}">
                </Border>

                <!-- Grooves 4 -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Rectangle Grid.Column="1" Fill="{StaticResource GroovesGradient}" Width="2" Margin="0,5,0,5" RadiusX="1" RadiusY="1"/>
                    <Rectangle Grid.Column="2" Fill="{StaticResource GroovesGradient}" Width="2" Margin="0,5,0,5" RadiusX="1" RadiusY="1"/>
                    <Rectangle Grid.Column="3" Fill="{StaticResource GroovesGradient}" Width="2" Margin="0,5,0,5" RadiusX="1" RadiusY="1"/>
                    <Rectangle Grid.Column="4" Fill="{StaticResource GroovesGradient}" Width="2" Margin="0,5,0,5" RadiusX="1" RadiusY="1"/>
                    <Rectangle Grid.Column="5" Fill="{StaticResource GroovesGradient}" Width="2" Margin="0,5,0,5" RadiusX="1" RadiusY="1"/>
                </Grid>
                <!-- Highlight 5  -->
                <Rectangle Width="2" Height="8"
                        Fill="#f0f0f0"
                        RadiusX="1" RadiusY="1"
                        HorizontalAlignment="Left"
                        Margin="6,0,0,0"/>
                </Grid>
            </Grid>
            <!--  END BPM WHEEL 6 -->
        </StackPanel>
         <!--  END COMPOSER TASKBAR -->
        

        <!-- Timeline hook -->
        <controls:TimelineControl Grid.Row="1"
                          x:Name="Timeline"
                          Height="60"
                          Background="White"
                          Margin="0"
                          Bpm="{Binding Bpm}"
                          Zoom="{Binding Zoom}"
                          SeekRequested="Timeline_SeekRequested"/>

                <!-- Track hook -->
        <ScrollViewer Grid.Row="2"
                    VerticalScrollBarVisibility="Auto"
                    Background="#d6b995">
            <StackPanel x:Name="TracksPanel"
                        Orientation="Vertical"
                        Margin="0,0,0,0"/> <!-- aligns with timeline offset -->
        </ScrollViewer>

        <StatusBar Grid.Row="3">
            <TextBlock Text="{Binding StatusText}"/>
        </StatusBar>
    </Grid>
</UserControl>
